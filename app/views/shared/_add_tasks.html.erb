<div id="add-task-popup" class="popup hidden">
  <div class="popup-content">
    <span class="close-icon" id="close-popup-btn">&times;</span>
    <h2>Create New Task</h2>
    <%= form_with model: @task, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, placeholder: "Enter task title" %>
      </div>
      <div class="form-group">
        <%= form.label :sub_title, "Subtitle" %>
        <%= form.text_field :sub_title, placeholder: "Optional subtitle" %>
      </div>
      <div class="form-group">
        <%= form.label :priority, "Priority" %>
        <%= form.select :priority, options_for_select(Task.priorities.keys.map { |p| [p.humanize, p] }), include_blank: false %>
      </div>
      <div class="form-group">
        <%= form.label :due_date, "Due Date" %>
        <%= form.text_field :due_date, id: "task_due_date", placeholder: "Select due date" %>
      </div>
      <div class="form-group">
        <%= form.submit "Create Task", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
